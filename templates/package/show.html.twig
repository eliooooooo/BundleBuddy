{% extends 'base.html.twig' %}

{% block title %}Package{% endblock %}

{% block body %}
    <h1>Package</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ package.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ package.name }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ package.version }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ package.description }}</td>
            </tr>
            <tr>
                <th>Documentation</th>
                <td>{{ package.documentation }}</td>
            </tr>
            <tr>
                <th>Repository</th>
                <td>{{ package.repository }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ package.size }}</td>
            </tr>
            <tr>
                <th>Install</th>
                <td>{{ package.install }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="vignette" src="{{ asset('uploads/'~package.image) }}" alt="{{ package.name }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_package_index') }}">back to list</a>

    <a href="{{ path('app_package_edit', {'id': package.id}) }}">edit</a>

    {{ include('package/_delete_form.html.twig') }}
{% endblock %}
